<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gestão de Carnes</title>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/carne.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header class="border-bottom shadow-sm bg-white">
        <div class="container py-4">
            <h1 class="h3 fw-bold text-primary mb-1">Sistema de Gestão de Carnes</h1>
            <p class="text-muted">Gerencie carnes, compradores e pedidos de forma eficiente</p>
        </div>

        <div class="container">
            <div class="menu-tabs">
                <a class="@(ViewData["Title"] as string == "Visão Geral" ? "active" : "")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-graph-up-arrow"></i> Visão Geral
                </a>
                <a class="@(ViewData["Title"] as string == "Carnes" ? "active" : "")" asp-controller="Carne" asp-action="Index">
                    <i class="bi bi-egg-fried"></i> Carnes
                </a>
                <a class="@(ViewData["Title"] as string == "Compradores" ? "active" : "")" asp-controller="Comprador" asp-action="Index">
                    <i class="bi bi-people"></i> Compradores
                </a>
                <a class="@(ViewData["Title"] as string == "Pedidos" ? "active" : "")" asp-controller="Pedido" asp-action="Index">
                    <i class="bi bi-cart"></i> Pedidos
                </a>
                <a class="@(ViewData["Title"] as string == "Cidades" ? "active" : "")" asp-controller="Cidade" asp-action="Index">
                    <i class="bi bi-geo-alt-fill"></i> Cidades
                </a>
                <a class="@(ViewData["Title"] as string == "Origens" ? "active" : "")" asp-controller="Origem" asp-action="Index">
                    <i class="bi bi-tree-fill"></i> Origens
                </a>
            </div>
        </div>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="text-center text-muted mt-5 mb-3">
        <div class="container">
            &copy; 2025 - Sistema de Gestão de Carnes
        </div>
    </footer>
    <script src="~/js/modal-exclusao.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
